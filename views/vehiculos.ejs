<DOCTYPE html>
    <html>

    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" href='https://bootswatch.com/4/solar/bootstrap.min.css'>
    </head>

    <body>

        <nav class="navbar navbar-dark bg-dark">
            <a href='/dashboard' class="navbar-brand">Home</a>
        </nav>
        <div class="container">
            <div class="row mt-5">
                <div class="col-md-8">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Indice</th>
                                <th>Placa</th>
                                <th>Id Linea</th>
                                <th>Modelo</th>
                                <th>Vencimiento seguro</th>
                                <th>Vencimiento tecnicomecanica</th>
                                <th>Vencimiento todo riesgo</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (data) { %>
                                <% for (let i = 0; i < data.length; i++) { %>
                                    <tr>
                                        <td>
                                            <%- i %>
                                        </td>
                                        <td>
                                            <%- data[i].nro_placa %>
                                        </td>
                                        <td>
                                            <%- data[i].id_linea %>
                                        </td>
                                        <td>
                                            <%- data[i].modelo %>
                                        </td>
                                        <td>
                                            <%- data[i].fecha_ven_seguro %>
                                        </td>
                                        <td>
                                            <%- data[i].fecha_ven_tecnicomecanica %>
                                        </td>
                                        <td>
                                            <%- data[i].fecha_ven_contratodo %>
                                        </td>
                                        <td>
                                            <a href="/deleteVe/<%- data[i].nro_placa %>" class="btn btn-danger">Del</a>
                                            <br>
                                            <br>
                                            <a href="/updateVe/<%- data[i].nro_placa %>" class="btn btn-info">Up</a>
                                        </td>
                                    </tr>
                                    <% } %>
                                        <% } %>
                        </tbody>
                    </table>
                </div>

                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <form action="/addVe" method="post">
                                <div class="form-group">
                                    <input type="text" name="nro_placa" placeholder="Nro de placa" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <input type="text" name="id_lineaLinea" placeholder="Id linea" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <input type="text" name="modelo" placeholder="Modelo" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <input type="date" name="fecha_ven_seguro" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <input type="date" name="fecha_ven_tecnicomecanica" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <input type="date" name="fecha_ven_contratodo" class="form-control" />
                                </div>
                                <button type="submit" class="btn btn-primary">Add vehicle</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>

    </html>