<DOCTYPE html>
    <html>

    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" href='https://bootswatch.com/4/solar/bootstrap.min.css'>
    </head>

    <body>

        <nav class="navbar navbar-dark bg-dark">
            <a href='/dashboard' class="navbar-brand">Home</a>
        </nav>
        <div class="container">
            <div class="row mt-5">
                <div class="col-md-7">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Indice</th>
                                <th>Id marca</th>
                                <th>Desc marca</th>
                                <th>Activo</th>

                            </tr>
                        </thead>
                        <tbody>
                            <% if (data) { %>
                                <% for (let i = 0; i < data.length; i++) { %>
                                    <tr>
                                        <td>
                                            <%- i %>
                                        </td>
                                        <td>
                                            <%- data[i].id_marca %>
                                        </td>
                                        <td>
                                            <%- data[i].desc_marca %>
                                        </td>
                                        <td>
                                            <%- data[i].activo %>
                                        </td>
                                        <td>
                                            <a href="/deleteMa/<%- data[i].id_marca %>" class="btn btn-danger">Delete</a>
                                            <br>
                                            <br>
                                            <a href="/updateMa/<%- data[i].id_marca %>" class="btn btn-info">Update</a>
                                        </td>
                                    </tr>
                                    <% } %>
                                        <% } %>
                        </tbody>
                    </table>
                </div>
                <div class="col-md-4 ml-5">
                    <div class="card">
                        <div class="card-body">
                            <form action="/addMa" method="post">
                                <div class="form-group">
                                    <input type="text" name="id_marca" placeholder="Id marca" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <input type="text" name="desc_marca" placeholder="Desc Marca" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <input type="text" name="activo" placeholder="Activo" class="form-control" />
                                </div>
                                <button type="submit" class="btn btn-primary">Add marca</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>

    </html>